{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/client/*"]
    },
    "strict": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es7", "esnext"],
    "incremental": true,
    // "tsBuildInfoFile": "./buildcache/ts"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
